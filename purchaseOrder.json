{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://example.com/product.schema.json",
    "title": "PurchaseOrder",
    "description": "Purchase order",
    "type": "object",
    "properties": {
        "orderDate": {
            "type": "string",
            "format": "date"
        },
        "shipTo": {
            "type": "object",
            "properties": {
                "country": {
                    "type": "string"
                },
                "state": {
                    "type": "string"
                },
                "city": {
                    "type": "string"
                },
                "street": {
                    "type": "string"
                },
                "name": {
                    "type": "string"
                },
                "zip": {
                    "type": "integer"
                }
            }
        },
        "billTo": {
            "type": "string"
        }
    },
    "required": [
        "orderDate",
        "shipTo"
    ]
}